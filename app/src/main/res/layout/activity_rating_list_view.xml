<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Models.RatingListView"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/imageLinearLayout">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/samsung"
                    android:layout_gravity="right"
                    android:id="@+id/RateViewImage"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy Tab S2"
                    android:textSize="18sp"
                    android:id="@+id/txtRateViewProductName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKR 25000"
                    android:textColor="@color/colorPrimary"
                    android:gravity="bottom|right"
                    android:textSize="15sp"
                    android:id="@+id/txtRateViewPrice"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shelf: 01A"
                            android:id="@+id/txtRateShelf"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentLeft="true"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar1"
                        style="?android:attr/ratingBarStyleSmall"
                        android:rating="3.5"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/txtRating"
                        android:theme="@style/RatingBar"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="3.5"
                        android:textSize="13sp"
                        android:id="@+id/txtRating"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/yellowroundedcircle"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
